<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-sucess">Nova postagem</button>
</a>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descrição}}</p>
            <small>Data: {{data}}</small>
            <small>Categoria {{categoria.nome}}</small>
            <br>

        <a href="/admin/postagens/edit/{{_id}}">
            <button>Editar categoria</button>
        </a>

        <form action="/admin/postagens/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger" type="submit">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}

